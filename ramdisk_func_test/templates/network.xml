<network>
  <name>{{ name }}</name>
  <forward mode='nat'/>
  <bridge name='{{ bridge }}' stp='on' delay='0' />
  <ip address='{{ address }}' netmask='255.255.255.0'>
  <tftp root='{{ tftp_root }}' />
  <dhcp>
   <range start="{{ range_start }}" end="{{ range_end }}" />
   <bootp file='pxelinux.0' />
  </dhcp>
  </ip>
</network>
